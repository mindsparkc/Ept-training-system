<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.user.curriculum.mapper.CurriculumTrainStudentMapper">

    <resultMap type="CurriculumTrainStudent" id="CTrainStudentResult">
        <result property="id"    column="id"    />
        <result property="trainId"    column="train_id"    />
        <result property="cid"    column="cid"    />
        <result property="xyid"    column="xyid"    />
        <result property="da"    column="da" />
    </resultMap>

    <!--查询用户课程练习集信息-->
    <select id="selectCTrainInfo" parameterType="CurriculumTrainStudent" resultMap="CTrainStudentResult">
       select id,train_id,cid,xyid,da
       from curriculum_train_student
        <where>
            xyid = #{xyid} and cid=#{cid} and train_id = #{trainId}

        </where>
    </select>

    <!--新增用户课程练习集信息-->
    <insert id="insertCTrainInfo"  parameterType="CurriculumTrainStudent" >
        insert into curriculum_train_student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cid != null">cid,</if>
            <if test="trainId != null">train_id,</if>
            <if test="xyid != null">xyid,</if>
            <if test="da != null">da,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cid != null">#{cid},</if>
            <if test="trainId != null">#{trainId},</if>
            <if test="xyid != null">#{xyid},</if>
            <if test="da != null">#{da},</if>
        </trim>
    </insert>

    <!--删除用户课程练习集信息-->
    <delete id="deleteCTrainInfo" parameterType="CurriculumTrainStudent" >
        delete
        from curriculum_train_student
        <where>
            xyid = #{xyid} and cid=#{cid} and train_id = #{trainId}
        </where>
    </delete>

</mapper>
