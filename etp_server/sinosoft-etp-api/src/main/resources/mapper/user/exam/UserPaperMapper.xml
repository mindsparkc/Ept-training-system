<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.user.exam.mapper.UserPaperMapper">

    <resultMap type="Paper" id="PaperResult">
        <result property="paperId"    column="paper_id"    />
        <result property="version"    column="version"    />
        <result property="name"    column="name"    />
        <result property="content"    column="content"    />
        <result property="strategy"    column="strategy"    />
        <result property="totalScore"    column="total_score"    />
        <result property="suggestTime"    column="suggest_time"    />
        <result property="qualifyScore"    column="qualify_score"    />
        <result property="quCount"    column="qu_count"    />
        <result property="status"    column="status"    />
        <result property="userId"    column="user_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectPaperVo">
        select paper_id, version, name, content, strategy, total_score, suggest_time, qualify_score, qu_count, status, user_id, dept_id, del_flag, create_by, create_time, update_by, update_time, remark from paper
    </sql>

    <!-- TODO:查询试卷基本信息 -->
    <select id="selectPaperById" parameterType="Long" resultMap="PaperResult">
        <include refid="selectPaperVo"/>
        where paper_id = #{paperId}
    </select>

</mapper>
