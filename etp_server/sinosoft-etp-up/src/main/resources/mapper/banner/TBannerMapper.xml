<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.etp.up.banner.mapper.TBannerMapper">

    <resultMap type="TBanner" id="TBannerResult">
        <result property="id"    column="id"    />
        <result property="imageurl"    column="imageUrl"    />
    </resultMap>

    <sql id="selectTBannerVo">
        select b.id, b.imageUrl from t_banner b
        <!-- left join t_banner_company bc on b.id = bc.bid -->
    </sql>

    <select id="selectTBannerList" parameterType="TBanner" resultMap="TBannerResult">
        <include refid="selectTBannerVo"/>
        <where>
           b.del_flag = '0'
           and b.source=#{source}
        </where>
        order by b.update_time desc
        limit 1
    </select>

    <select id="selectTBannerById" parameterType="Long" resultMap="TBannerResult">
        <include refid="selectTBannerVo"/>
        where id = #{id}
    </select>


</mapper>
