<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.system.mapper.SysUserGroupCompanyMapper">

    <resultMap type="SysUserGroupCompany" id="SysUserGroupCompanyResult">
        <result property="id"    column="id"    />
        <result property="qyid"    column="qyid"    />
        <result property="groupId"    column="group_id"    />
    </resultMap>

    <sql id="selectSysUserGroupCompanyVo">
        select id, qyid, group_id from sys_user_group_company
    </sql>

    <select id="selectSysUserGroupCompanyList" parameterType="SysUserGroupCompany" resultMap="SysUserGroupCompanyResult">
        <include refid="selectSysUserGroupCompanyVo"/>
        <where>
            <if test="qyid != null "> and qyid = #{qyid}</if>
            <if test="groupId != null "> and group_id = #{groupId}</if>
        </where>
    </select>

    <select id="selectSysUserGroupCompanyById" parameterType="Long" resultMap="SysUserGroupCompanyResult">
        <include refid="selectSysUserGroupCompanyVo"/>
        where id = #{id}
    </select>

    <insert id="insertSysUserGroupCompany" parameterType="SysUserGroupCompany" useGeneratedKeys="true" keyProperty="id">
        insert into sys_user_group_company
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="qyid != null">qyid,</if>
            <if test="groupId != null">group_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="qyid != null">#{qyid},</if>
            <if test="groupId != null">#{groupId},</if>
        </trim>
    </insert>

    <update id="updateSysUserGroupCompany" parameterType="SysUserGroupCompany">
        update sys_user_group_company
        <trim prefix="SET" suffixOverrides=",">
            <if test="qyid != null">qyid = #{qyid},</if>
            <if test="groupId != null">group_id = #{groupId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysUserGroupCompanyByGroupId" parameterType="Long">
        delete from sys_user_group_company where group_id = #{groupId}
    </delete>

    <delete id="deleteSysUserGroupCompanyByGroupIds" parameterType="String">
        delete from sys_user_group_company where group_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
